<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <TextView
        style="@style/app_titel_no_image"
        android:text="账本"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/zhangben_time"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/itemself_right_line"
            android:gravity="center"
            android:singleLine="true"
            android:text="2015年"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/itemself_bottom_line"
            android:gravity="start|center_vertical"
            android:paddingLeft="10dp"
            android:text="合计 "
            android:textColor="#E58701"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/itemself_bottom_line"
            android:gravity="end|center_vertical"
            android:paddingRight="10dp"
            android:text="+60000"
            android:textColor="#E58701"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:background="@drawable/itemself_botrig_line"
            android:drawableRight="@drawable/pic_sj"
            android:gravity="center_vertical|end"
            android:paddingRight="10dp"
            android:singleLine="true"
            android:text="03月"
            android:textSize="20sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/itemself_bottom_line"
            android:gravity="center_vertical"
            android:paddingLeft="10dp"
            android:text="输 -300000"
            android:textSize="15sp" />

        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="3"
            android:background="@drawable/itemself_bottom_line"
            android:gravity="end|center_vertical"
            android:paddingRight="10dp"
            android:text="赢 +360000"
            android:textSize="15sp" />
    </LinearLayout>

    <ListView
        android:id="@+id/zhangben_listview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none"
        android:dividerHeight="2dp"/>

</LinearLayout>